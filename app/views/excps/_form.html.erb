<%= form_for @excp, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :fixed, :class => 'control-label col-md-2' %>
    <div class="col-md-1">
      <%= f.check_box :fixed, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_fixed, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :date_fixed, :include_blank => true, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :excp_thread, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :excp_thread, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :excp_trace, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :excp_trace, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notes, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :notes, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  excps_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
