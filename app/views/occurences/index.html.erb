<%- model_class = Occurence -%>
<div class="page-header">
  <h1><%=t '.title', :default => Occurence %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:device_brand) %></th>
      <th><%= model_class.human_attribute_name(:device_model) %></th>
      <th><%= model_class.human_attribute_name(:operation_system_version) %></th>
      <th><%= model_class.human_attribute_name(:app_version) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @occurences.each do |occurence| %>
      <tr>
        <td><%= occurence.id %></td>
        <td><%= occurence.date %></td>
        <td><%= occurence.device_brand %></td>
        <td><%= occurence.device_model %></td>
        <td><%= occurence.operation_system_version %></td>
        <td><%= occurence.app_version %></td>
        <td><%=l occurence.created_at, format: :long %></td>
        <td>
          <%= link_to occurence_path(occurence), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to occurence_path(occurence), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_occurence_path,
            :class => 'btn btn-primary' %>
