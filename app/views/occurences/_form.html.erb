<%= form_for @occurence, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :date, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :device_brand, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :device_brand, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :device_model, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :device_model, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :operation_system_version, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :operation_system_version, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :app_version, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :app_version, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  occurences_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
